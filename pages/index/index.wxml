<!--index.wxml-->
<view class="home">
  <view class="city-nav">
    <view class="tip">
      <view class="tip-left">当前定位城市：</view>
      <view class="tip-right">定位不准时，请在城市列表中选择</view>
    </view>
    <view class="guess-city" data-item="{{guessCityId}}" bindtap="goToGuessCity">
      <view class="guess-city-text">{{guessCity }}</view>
    </view>
  </view>
  <view class="hot-city">
    <view class="city-title">热门城市</view>
    <view class="city-list">
      <view class="city-item ellipsis" wx:for="{{hotCities}}" wx:key="{{index}}" data-item="item.id" bindtap="goToHotCity">
        {{item.name}}
      </view>
    </view>
  </view>
  <view class="sort-city">
    <view class="group-list" wx:for="{{sortGroupCites}}" wx:for-item="group" wx:key="{{index}}">
      <view class="sort-city-title">{{index}}</view>
      <view class="city-list">
        <view class="city-item group-item ellipsis" wx:for="{{group}}" wx:for-item="item" wx:key="{{key}}" data-item="item.id" bindtap="goToSortCity">
          {{item.name}}
        </view>
      </view>
    </view>
  </view>
</view>
