/**index.wxss**/
.home {
  background-color: #f5f5f5;
}

/*city-nav*/
.city-nav {
  border-top: 2rpx solid #e4e4e4;
  background-color: #fff;
}
.tip {
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 58rpx;
  padding: 0 18rpx;
}
.tip-left {
  font-size: 22rpx;
  color: #666;
}
.tip-right {
  font-weight: 900;
  font-size: 19rpx;
  color: #9f9f9f;
}
.guess-city {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 72rpx;
  padding: 0 18rpx;
  border-top: 1rpx solid #e4e4e4;
  border-bottom: 1rpx solid #e4e4e4;
  font: 30rpx/73rpx Microsoft YaHei;
}
.guess-city-text {
  color: #3190e8;
}
/*hot-city*/
.hot-city {
  margin: 8rpx 0;
  background-color: #fff;
}
.city-title {
  color: #666;
  font-weight: 400;
  text-indent: 18rpx;
  font: 22rpx/58rpx Helvetica Neue;
}
.city-list {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  width: 100%;
  border-top: 1rpx solid #e4e4e4;
}
.city-item {
  flex: 0 0 25%;
  box-sizing: border-box;
  text-align: center;
  color: #3190e8;
  border-bottom: 1rpx solid #e4e4e4;
  border-right: 1rpx solid #e4e4e4;
  height: 70rpx;
  font: 24rpx/70rpx Microsoft YaHei;
}
.sort-city {
  background-color: #fff;
}
.sort-city-title {
  color: #666;
  font-weight: 400;
  text-indent: 18rpx;
  border-top: 1rpx solid #e4e4e4;
  font: 24rpx/58rpx Helvetica Neue;
}
.group-item {
  color: #666;
}